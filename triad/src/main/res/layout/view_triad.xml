<?xml version="1.0" encoding="utf-8"?>
<com.nhaarman.triad.TriadView
  android:id="@+id/view_triad"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <FrameLayout
    android:id="@+id/view_triad_screenholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <View
    android:id="@+id/view_triad_dimmerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:background="#000" />

  <RelativeLayout
    android:id="@+id/view_triad_dialogholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

</com.nhaarman.triad.TriadView>