<?xml version="1.0" encoding="utf-8"?>
<com.nhaarman.sample.main.MainView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <View
    android:id="@+id/view_main_pivot"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_centerInParent="true" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_toLeftOf="@id/view_main_pivot"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/view_main_countertv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="40sp"
      tools:text="23" />

    <Button
      android:id="@+id/view_main_incrementbutton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@string/view_main_increment"
      android:textSize="25sp" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_toRightOf="@id/view_main_pivot"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/view_main_secondcountertv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="40sp"
      tools:text="23" />

    <Button
      android:id="@+id/view_main_secondincrementbutton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@string/view_main_increment"
      android:textSize="25sp" />
  </LinearLayout>

</com.nhaarman.sample.main.MainView>